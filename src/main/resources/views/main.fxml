<?xml version="1.0" encoding="UTF-8"?>

<?import gui.components.TuringGrid?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="gui.controllers.MainController">
    <center>
        <StackPane minHeight="150.0" minWidth="200.0" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <TuringGrid fx:id="grid" gridLinesVisible="true"/>
                <VBox>
                    <children>
                        <Button mnemonicParsing="false" text="Add State"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </bottom>
</BorderPane>
