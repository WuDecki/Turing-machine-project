<?xml version="1.0" encoding="UTF-8"?>

<?import gui.components.TuringGrid?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/8.0.172-ea"
            fx:controller="gui.controllers.MainController">
    <bottom>
        <HBox prefHeight="300.0" spacing="10.0" BorderPane.alignment="BOTTOM_LEFT">
            <children>
                <ScrollPane minHeight="100.0" minWidth="100.0" HBox.hgrow="ALWAYS">
                    <content>
                        <TuringGrid fx:id="grid" gridLinesVisible="true" maxHeight="1.7976931348623157E308"
                                    maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"/>
                    </content>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </ScrollPane>
                <VBox alignment="TOP_RIGHT" spacing="5.0">
                    <children>
                        <HBox layoutX="10.0" layoutY="40.0" spacing="5.0">
                            <children>
                                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                        onAction="#addState" text="Add State">
                                    <HBox.margin>
                                        <Insets left="70.0"/>
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="70.0" spacing="5.0">
                            <children>
                                <ComboBox fx:id="removeStateInput" minHeight="-Infinity" minWidth="-Infinity"
                                          prefWidth="65.0"/>
                                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                        onAction="#removeState" text="Remove State"/>
                            </children>
                        </HBox>
                        <HBox spacing="5.0">
                            <children>
                                <TextField fx:id="addSymbolInput" minHeight="-Infinity" minWidth="-Infinity"
                                           prefWidth="65.0"/>
                                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                        onAction="#addSymbol" text="Add Symbol"/>
                            </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="40.0" spacing="5.0">
                            <children>
                                <ComboBox fx:id="removeSymbolInput" minHeight="-Infinity" minWidth="-Infinity"
                                          prefWidth="65.0"/>
                                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                        onAction="#removeSymbol" text="Remove Symbol"/>
                            </children>
                        </HBox>
                    </children>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </VBox>
                <VBox fillWidth="false" layoutX="10.0" layoutY="10.0">
                    <children>
                        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="Add State"/>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <center>
        <VBox minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="startProgramButton" mnemonicParsing="false" onAction="#startProgram"
                                text="Start program"/>
                        <CheckBox fx:id="stepByStepCheckBox" mnemonicParsing="false" text="Step by step"/>
                        <Button onAction="#restartProgram" mnemonicParsing="false" text="Restart"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
